---
import Layout from '../layouts/Layout.astro';
---

<Layout title="2667">
  <div class="min-h-screen flex flex-col items-center justify-center px-4 -mt-12">
    
    <!-- Theme Toggle -->
    <div class="fixed top-6 right-6 flex items-center gap-1 z-50">
      <button 
        onclick="setLightMode()"
        aria-label="Light theme"
        class="group p-2 rounded-full hover:bg-neutral-200 dark:hover:bg-neutral-800 transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 stroke-neutral-400 dark:stroke-neutral-500 opacity-60 group-hover:opacity-100 group-hover:stroke-neutral-800 dark:group-hover:stroke-[#2EE59D] transition-all duration-300" viewBox="0 0 48 48" fill="none" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <!-- Ornate sun -->
          <circle cx="24" cy="24" r="8"></circle>
          <circle cx="24" cy="24" r="4" stroke-width="1"></circle>
          <!-- Ornate rays -->
          <line x1="24" y1="4" x2="24" y2="12"></line>
          <line x1="24" y1="36" x2="24" y2="44"></line>
          <line x1="4" y1="24" x2="12" y2="24"></line>
          <line x1="36" y1="24" x2="44" y2="24"></line>
          <!-- Diagonal rays -->
          <line x1="9.86" y1="9.86" x2="15.51" y2="15.51"></line>
          <line x1="32.49" y1="32.49" x2="38.14" y2="38.14"></line>
          <line x1="9.86" y1="38.14" x2="15.51" y2="32.49"></line>
          <line x1="32.49" y1="15.51" x2="38.14" y2="9.86"></line>
          <!-- Small decorative dots at ray ends -->
          <circle cx="24" cy="4" r="1.5" stroke-width="1"></circle>
          <circle cx="24" cy="44" r="1.5" stroke-width="1"></circle>
          <circle cx="4" cy="24" r="1.5" stroke-width="1"></circle>
          <circle cx="44" cy="24" r="1.5" stroke-width="1"></circle>
        </svg>
      </button>
      <button 
        onclick="setDarkMode()"
        aria-label="Dark theme"
        class="group p-2 rounded-full hover:bg-neutral-200 dark:hover:bg-neutral-800 transition-colors"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 stroke-neutral-400 dark:stroke-neutral-500 opacity-60 group-hover:opacity-100 group-hover:stroke-neutral-800 dark:group-hover:stroke-[#2EE59D] transition-all duration-300" viewBox="0 0 48 48" fill="none" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <!-- Ornate crescent moon -->
          <path d="M36 24c0 8.84-7.16 16-16 16-2.63 0-5.11-.64-7.3-1.77A16 16 0 0 0 36 24c0-5.05-2.34-9.56-6-12.5A15.9 15.9 0 0 1 36 24z"></path>
          <!-- Stars -->
          <circle cx="38" cy="12" r="1.5" stroke-width="1"></circle>
          <circle cx="42" cy="20" r="1" stroke-width="1"></circle>
          <circle cx="34" cy="8" r="1" stroke-width="1"></circle>
          <!-- Decorative detail on moon -->
          <circle cx="22" cy="18" r="2" stroke-width="1"></circle>
          <circle cx="18" cy="28" r="1.5" stroke-width="1"></circle>
        </svg>
      </button>
    </div>

    <!-- Terminal Intro -->
    <div class="font-mono text-sm md:text-base text-neutral-600 dark:text-neutral-400 text-center space-y-2 terminal-intro mb-8">
      <div class="terminal-line" style="--delay: 0">
        <span class="text-[#2EE59D]">&gt;</span>
        <span class="typing-text"> initializing 2667_</span>
        <span class="cursor">â–‹</span>
      </div>
      <div class="terminal-line" style="--delay: 1.5">
        <span class="text-[#2EE59D]">&gt;</span>
        <span class="typing-text"> status: </span>
        <span class="status-ready text-amber-500">pending</span>
      </div>
    </div>

    <!-- Ape Image - fades in after terminal -->
    <div class="w-64 h-64 md:w-80 md:h-80 mb-12 rounded-xl overflow-hidden ape-fade">
      <img 
        src="/ape-color.jpeg" 
        alt="2667" 
        class="w-full h-full object-cover"
      />
    </div>

    <!-- Navigation -->
    <nav class="mt-16 flex gap-8 nav-fade">
      <a 
        href="/collection" 
        class="px-6 py-3 border border-neutral-300 dark:border-neutral-600 text-neutral-700 dark:text-neutral-300 font-mono text-sm uppercase tracking-wider hover:bg-[#2EE59D] hover:text-black hover:border-[#2EE59D] transition-all duration-300"
      >
        Collection
      </a>
    </nav>

  </div>
</Layout>

<style>
  /* Ape fade in animation */
  .ape-fade {
    opacity: 0;
    animation: fadeIn 1s ease forwards;
    animation-delay: 4s;
  }

  /* Terminal animations */
  .terminal-intro .terminal-line {
    opacity: 0;
    animation: lineAppear 0.1s ease forwards;
    animation-delay: calc(var(--delay) * 1s);
  }

  .terminal-intro .typing-text {
    display: inline;
    overflow: hidden;
    white-space: nowrap;
    max-width: 0;
    animation: typeText 0.8s steps(30) forwards;
    animation-delay: calc(var(--delay) * 1s + 0.1s);
  }

  .terminal-intro .status-ready {
    opacity: 0;
    animation: blinkIn 0.3s ease forwards;
    animation-delay: 2.5s;
  }

  .terminal-intro .cursor {
    animation: cursorBlink 0.7s step-end infinite;
    animation-delay: calc(var(--delay) * 1s);
    margin-left: 2px;
    color: #2EE59D;
  }

  .nav-fade {
    opacity: 0;
    animation: fadeIn 0.6s ease forwards;
    animation-delay: 5s;
  }

  @keyframes lineAppear {
    to { opacity: 1; }
  }

  @keyframes typeText {
    to { max-width: 500px; }
  }

  @keyframes blinkIn {
    0% { opacity: 0; }
    50% { opacity: 0; }
    100% { opacity: 1; }
  }

  @keyframes cursorBlink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }
</style>

<script is:inline>
  function setLightMode() {
    document.documentElement.classList.remove('dark');
    localStorage.setItem('theme', 'light');
  }
  
  function setDarkMode() {
    document.documentElement.classList.add('dark');
    localStorage.setItem('theme', 'dark');
  }
</script>
