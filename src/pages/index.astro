---
import Layout from '../layouts/Layout.astro';
---

<Layout title="2667">
  <div class="min-h-screen bg-black flex flex-col items-center justify-center px-4 -mt-12">
    
    <!-- Ape Container with Color Reveal Animation -->
    <div class="relative w-64 h-64 md:w-80 md:h-80 mb-12">
      <!-- Outline version (base layer) -->
      <img 
        src="/ape-outline.png" 
        alt="2667" 
        class="absolute inset-0 w-full h-full object-contain dark:[filter:invert(1)_sepia(1)_saturate(50)_hue-rotate(80deg)_brightness(0.7)]"
      />
      <!-- Color version (reveals on top) -->
      <img 
        src="/ape-color.jpeg" 
        alt="2667" 
        class="absolute inset-0 w-full h-full object-contain color-reveal rounded-xl"
      />
    </div>

    <!-- Terminal Intro -->
    <div class="font-mono text-sm md:text-base text-neutral-400 text-center space-y-2 terminal-intro">
      <div class="terminal-line" style="--delay: 4">
        <span class="text-[#2EE59D]">&gt;</span>
        <span class="typing-text"> initializing 2667_</span>
        <span class="cursor">â–‹</span>
      </div>
      <div class="terminal-line" style="--delay: 5.5">
        <span class="text-[#2EE59D]">&gt;</span>
        <span class="typing-text"> status: </span>
        <span class="status-ready text-[#2EE59D]">active</span>
      </div>
      <div class="terminal-line" style="--delay: 7">
        <span class="text-[#2EE59D]">&gt;</span>
        <span class="typing-text"> investing in the future of digital culture</span>
      </div>
    </div>

    <!-- Navigation -->
    <nav class="mt-16 flex gap-8 nav-fade">
      <a 
        href="/collection" 
        class="px-6 py-3 border border-neutral-600 text-neutral-300 font-mono text-sm uppercase tracking-wider hover:bg-[#2EE59D] hover:text-black hover:border-[#2EE59D] transition-all duration-300"
      >
        Collection
      </a>
    </nav>

  </div>
</Layout>

<style>
  /* Color reveal animation - clip from bottom to top */
  .color-reveal {
    clip-path: inset(100% 0 0 0);
    animation: revealColor 3.5s ease-out forwards;
    animation-delay: 0.5s;
  }

  @keyframes revealColor {
    0% {
      clip-path: inset(100% 0 0 0);
    }
    100% {
      clip-path: inset(0 0 0 0);
    }
  }

  /* Terminal animations */
  .terminal-intro .terminal-line {
    opacity: 0;
    animation: lineAppear 0.1s ease forwards;
    animation-delay: calc(var(--delay) * 1s);
  }

  .terminal-intro .typing-text {
    display: inline;
    overflow: hidden;
    white-space: nowrap;
    max-width: 0;
    animation: typeText 0.8s steps(30) forwards;
    animation-delay: calc(var(--delay) * 1s + 0.1s);
  }

  .terminal-intro .status-ready {
    opacity: 0;
    animation: blinkIn 0.3s ease forwards;
    animation-delay: 6.5s;
  }

  .terminal-intro .cursor {
    animation: cursorBlink 0.7s step-end infinite;
    animation-delay: calc(var(--delay) * 1s);
    margin-left: 2px;
    color: #2EE59D;
  }

  .nav-fade {
    opacity: 0;
    animation: fadeIn 0.6s ease forwards;
    animation-delay: 8.5s;
  }

  @keyframes lineAppear {
    to { opacity: 1; }
  }

  @keyframes typeText {
    to { max-width: 500px; }
  }

  @keyframes blinkIn {
    0% { opacity: 0; }
    50% { opacity: 0; }
    100% { opacity: 1; }
  }

  @keyframes cursorBlink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }
</style>
