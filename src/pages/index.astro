---
import Layout from '../layouts/Layout.astro';
---

<Layout title="2667">
  <div class="min-h-screen flex flex-col items-center justify-center px-4 -mt-12">
    
    <!-- Theme Toggle -->
    <button 
      onclick="toggleTheme()"
      class="fixed top-6 right-6 p-3 rounded-full bg-neutral-100 dark:bg-neutral-800 hover:bg-neutral-200 dark:hover:bg-neutral-700 transition-colors z-50"
      aria-label="Toggle theme"
    >
      <!-- Sun icon (shown in dark mode) -->
      <svg class="w-5 h-5 hidden dark:block text-[#2EE59D]" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <circle cx="12" cy="12" r="5"></circle>
        <line x1="12" y1="1" x2="12" y2="3"></line>
        <line x1="12" y1="21" x2="12" y2="23"></line>
        <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
        <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
        <line x1="1" y1="12" x2="3" y2="12"></line>
        <line x1="21" y1="12" x2="23" y2="12"></line>
        <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
        <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
      </svg>
      <!-- Moon icon (shown in light mode) -->
      <svg class="w-5 h-5 block dark:hidden text-neutral-600" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
        <path d="M21 12.79A9 9 0 1 1 11.21 3 7 7 0 0 0 21 12.79z"></path>
      </svg>
    </button>

    <!-- Ape Container with Color Reveal Animation -->
    <div class="relative w-64 h-64 md:w-80 md:h-80 mb-12 rounded-xl overflow-hidden bg-white">
      <!-- Outline version (base layer) - cropped to match colored -->
      <img 
        src="/ape-outline.jpg" 
        alt="2667" 
        class="absolute w-[175%] h-auto top-[5%] left-1/2 -translate-x-1/2"
      />
      <!-- Color version (reveals on top) -->
      <img 
        src="/ape-color.jpeg" 
        alt="2667" 
        class="absolute inset-0 w-full h-full object-cover color-reveal"
      />
    </div>

    <!-- Terminal Intro -->
    <div class="font-mono text-sm md:text-base text-neutral-600 dark:text-neutral-400 text-center space-y-2 terminal-intro">
      <div class="terminal-line" style="--delay: 6.5">
        <span class="text-[#2EE59D]">&gt;</span>
        <span class="typing-text"> initializing 2667_</span>
        <span class="cursor">â–‹</span>
      </div>
      <div class="terminal-line" style="--delay: 8">
        <span class="text-[#2EE59D]">&gt;</span>
        <span class="typing-text"> status: </span>
        <span class="status-ready text-[#2EE59D]">active</span>
      </div>
      <div class="terminal-line" style="--delay: 9.5">
        <span class="text-[#2EE59D]">&gt;</span>
        <span class="typing-text"> investing in the future of digital culture</span>
      </div>
    </div>

    <!-- Navigation -->
    <nav class="mt-16 flex gap-8 nav-fade">
      <a 
        href="/collection" 
        class="px-6 py-3 border border-neutral-300 dark:border-neutral-600 text-neutral-700 dark:text-neutral-300 font-mono text-sm uppercase tracking-wider hover:bg-[#2EE59D] hover:text-black hover:border-[#2EE59D] transition-all duration-300"
      >
        Collection
      </a>
    </nav>

  </div>
</Layout>

<style>
  /* Color reveal animation - clip from bottom to top */
  .color-reveal {
    clip-path: inset(100% 0 0 0);
    animation: revealColor 6s ease-out forwards;
    animation-delay: 0.5s;
  }

  @keyframes revealColor {
    0% {
      clip-path: inset(100% 0 0 0);
    }
    100% {
      clip-path: inset(0 0 0 0);
    }
  }

  /* Terminal animations */
  .terminal-intro .terminal-line {
    opacity: 0;
    animation: lineAppear 0.1s ease forwards;
    animation-delay: calc(var(--delay) * 1s);
  }

  .terminal-intro .typing-text {
    display: inline;
    overflow: hidden;
    white-space: nowrap;
    max-width: 0;
    animation: typeText 0.8s steps(30) forwards;
    animation-delay: calc(var(--delay) * 1s + 0.1s);
  }

  .terminal-intro .status-ready {
    opacity: 0;
    animation: blinkIn 0.3s ease forwards;
    animation-delay: 9s;
  }

  .terminal-intro .cursor {
    animation: cursorBlink 0.7s step-end infinite;
    animation-delay: calc(var(--delay) * 1s);
    margin-left: 2px;
    color: #2EE59D;
  }

  .nav-fade {
    opacity: 0;
    animation: fadeIn 0.6s ease forwards;
    animation-delay: 11s;
  }

  @keyframes lineAppear {
    to { opacity: 1; }
  }

  @keyframes typeText {
    to { max-width: 500px; }
  }

  @keyframes blinkIn {
    0% { opacity: 0; }
    50% { opacity: 0; }
    100% { opacity: 1; }
  }

  @keyframes cursorBlink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }
</style>
