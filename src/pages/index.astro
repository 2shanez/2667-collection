---
import Layout from '../layouts/Layout.astro';
---

<Layout title="2667">
  <div class="min-h-screen flex flex-col items-center justify-center px-4 -mt-12">
    
    <!-- Terminal Intro -->
    <div class="font-mono text-sm md:text-base text-neutral-600 dark:text-neutral-400 text-center space-y-2 terminal-intro mb-8">
      <div class="terminal-line" style="--delay: 0">
        <span class="text-[#2EE59D]">&gt;</span>
        <span class="typing-text"> initializing 2667_</span>
        <span class="cursor">â–‹</span>
      </div>
      <div class="terminal-line" style="--delay: 1.5">
        <span class="text-[#2EE59D]">&gt;</span>
        <span class="typing-text"> status: </span>
        <span class="status-ready text-amber-500">pending</span>
      </div>
    </div>

    <!-- Ape Icon + 2667 - fades in after terminal -->
    <div class="flex flex-col items-center ape-fade mb-12">
      <img 
        src="/ape-icon.png" 
        alt="2667" 
        class="w-80 h-auto md:w-[28rem] object-contain [filter:invert(59%)_sepia(52%)_saturate(652%)_hue-rotate(107deg)_brightness(95%)_contrast(92%)]"
      />
      <span class="text-2xl md:text-3xl font-mono uppercase tracking-[0.2em] text-[#2EE59D] mt-6 mr-[-0.2em]">2667</span>
    </div>

    <!-- Navigation -->
    <nav class="mt-16 flex gap-8 nav-fade">
      <a 
        href="/collection" 
        class="px-6 py-3 border border-neutral-300 dark:border-neutral-600 text-neutral-700 dark:text-neutral-300 font-mono text-sm uppercase tracking-wider hover:bg-[#2EE59D] hover:text-black hover:border-[#2EE59D] transition-all duration-300"
      >
        Collection
      </a>
    </nav>

  </div>
</Layout>

<style>
  /* Ape fade in animation */
  .ape-fade {
    opacity: 0;
    animation: fadeIn 1s ease forwards;
    animation-delay: 4s;
  }

  /* Terminal animations */
  .terminal-intro .terminal-line {
    opacity: 0;
    animation: lineAppear 0.1s ease forwards;
    animation-delay: calc(var(--delay) * 1s);
  }

  .terminal-intro .typing-text {
    display: inline;
    overflow: hidden;
    white-space: nowrap;
    max-width: 0;
    animation: typeText 0.8s steps(30) forwards;
    animation-delay: calc(var(--delay) * 1s + 0.1s);
  }

  .terminal-intro .status-ready {
    opacity: 0;
    animation: blinkIn 0.3s ease forwards;
    animation-delay: 2.5s;
  }

  .terminal-intro .cursor {
    animation: cursorBlink 0.7s step-end infinite;
    animation-delay: calc(var(--delay) * 1s);
    margin-left: 2px;
    color: #2EE59D;
  }

  .nav-fade {
    opacity: 0;
    animation: fadeIn 0.6s ease forwards;
    animation-delay: 5s;
  }

  @keyframes lineAppear {
    to { opacity: 1; }
  }

  @keyframes typeText {
    to { max-width: 500px; }
  }

  @keyframes blinkIn {
    0% { opacity: 0; }
    50% { opacity: 0; }
    100% { opacity: 1; }
  }

  @keyframes cursorBlink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0; }
  }

  @keyframes fadeIn {
    to { opacity: 1; }
  }
</style>
